<resources>
    <!-- Primary Colors -->
    <color name="primaryColor">#3B82F6</color> <!-- A nice blue -->
    <color name="primaryDarkColor">#1E3A8A</color> <!-- Darker blue for accent -->
    <color name="accentColor">#F59E0B</color> <!-- Warm amber color for contrast -->

    <!-- Background Colors -->
    <color name="backgroundLight">#F3F4F6</color> <!-- Light gray for backgrounds -->
    <color name="backgroundDark">#1F2937</color> <!-- Dark gray for darker themes -->

    <!-- Text Colors -->
    <color name="textPrimary">#111827</color> <!-- Dark text color for readability -->
    <color name="textSecondary">#6B7280</color> <!-- Muted text color for less focus elements -->

    <!-- Button Colors -->
    <color name="buttonColor">#10B981</color> <!-- Greenish color for buttons -->
    <color name="buttonTextColor">#FFFFFF</color> <!-- White text on buttons -->

    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButtonStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Text Style for Headings -->
    <style name="HeadingTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
</resources>
