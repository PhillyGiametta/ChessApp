<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Username EditText -->
    <EditText
        android:id="@+id/profile_username_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:enabled="true" />

    <!-- Email EditText -->
    <EditText
        android:id="@+id/profile_email_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/profile_password_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword" />

    <!-- Create Button -->
    <Button
        style="@style/CustomButtonStyle"

        android:id="@+id/profile_create_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Profile" />

    <!-- Update Button -->
    <Button
        style="@style/CustomButtonStyle"

        android:id="@+id/profile_update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Profile" />

    <!-- Delete Button -->
    <Button
        style="@style/CustomButtonStyle"

        android:id="@+id/profile_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Profile" />

    <!-- List Button -->
    <Button
        style="@style/CustomButtonStyle"

        android:id="@+id/profile_list_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Profiles"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/back_button"
        style="@style/CustomButtonStyle"
        android:layout_width="154dp"
        android:layout_marginStart="16dp"
        android:text="Back" />


</LinearLayout>
