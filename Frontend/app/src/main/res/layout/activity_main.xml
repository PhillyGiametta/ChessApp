<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/main_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChessApp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:textSize="30sp"
        style="@style/HeadingTextStyle" />

    <TextView
        android:id="@+id/main_username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username Placeholder"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:textSize="30sp"
        android:textColor="#FF000000"
        android:visibility="gone" />

    <Button
        style="@style/CustomButtonStyle"

        android:id="@+id/main_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Login"
        android:textSize="20sp"
        android:textColor="#FF000000"/>

    <Button
        style="@style/CustomButtonStyle"

        android:id="@+id/main_signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Signup"
        android:textSize="20sp"
        android:textColor="#FF000000"/>

    <!-- Profile Button -->
    <Button
        android:id="@+id/main_profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Profile"
        android:textSize="20sp"
        android:textColor="#FF000000"
        android:background="@drawable/button_background"
        android:visibility="gone" />

    <!-- Chat Button -->
    <Button
        android:id="@+id/chat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Open Chat"
        android:textSize="20sp"
        android:textColor="#FF000000"
        android:background="@drawable/button_background"
        android:visibility="gone" />

    <!-- Play Now Button -->
    <Button
        android:id="@+id/play_now_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Play Now"
        android:textSize="20sp"
        android:textColor="#FF000000"
        android:background="@drawable/button_background"
        android:visibility="gone" />

    <!-- Leaderboard Button -->
    <Button
        android:id="@+id/leaderboard_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Leaderboard"
        android:textSize="20sp"
        android:textColor="#FF000000"
        android:background="@drawable/button_background"
        android:visibility="gone" />

</androidx.appcompat.widget.LinearLayoutCompat>
